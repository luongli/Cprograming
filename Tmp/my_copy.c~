#include<stdio.h>
#include "/home/li/Cprogramnig/luong.h"

#def MAX 100

void get_input(char *buffer, int size)
{
  int i;
  char ch;

  for(i = 0; i < size; i++){
    ch = getchar();

    if(ch != '\n')
      buffer[i] = ch;
    else{
      break;
    }
    
  }//end for

  myfflush();

}//end get_input

int main()
{

  char source[MAX];
  char target[MAX];
  int i;

  do{
    printf("Enter the source file name: ");
    get_input(source, MAX);
  }
  

}
