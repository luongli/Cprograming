void insertionSort(int *A, int len)
{
  int i;

  for(i = 1; i < len; i++){
    int k = A[i];
    int j = i - 1;
    
    while(j >= 0 && k < A[j]){
      A[j+1] = A[j];
      j--;
    }

    A[j++] = k;
  }

}//end insertionSort
